{
  "_comment": "Build with `packer build ubuntu1804.json`",
  "builders": [
    {
      "type": "qemu",
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz noapic ",
        "file=/floppy/{{ user `preseed` }} ",
        "debian-installer={{ user `locale` }} auto locale={{ user `locale` }} kbd-chooser/method=us ",
        "hostname={{ user `hostname` }} ",
        "fb=false debconf/frontend=noninteractive ",
        "keyboard-configuration/modelcode=SKIP ",
        "keyboard-configuration/layout=USA ",
        "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
        "passwd/user-fullname={{ user `ssh_fullname` }} ",
        "passwd/user-password={{ user `ssh_password` }} ",
        "passwd/user-password-again={{ user `ssh_password` }} ",
        "passwd/username={{ user `ssh_username` }} ",
        "initrd=/install/initrd.gz -- <enter>"
      ],
      "disk_size": "24576",
      "floppy_files": [
        "http/preseed.cfg"
      ],
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "e2ecdace33c939527cbc9e8d23576381c493b071107207d2040af72595f8990b",
      "iso_checksum_type": "sha256",
      "iso_urls": [
        "http://cdimage.ubuntu.com/releases/18.04/release/ubuntu-18.04.4-server-amd64.iso"
      ],
      "output_directory": "{{ user `output_directory` }}",
      "shutdown_command": "sudo -S shutdown -P now",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_timeout": "1h",
      "format": "qcow2",
      "net_device": "virtio-net-pci",
      "disk_interface": "virtio",
      "vm_name": "{{ user `vm_name` }}",
      "qemuargs": [
        [ "-m", "1024" ],
        [ "-enable-kvm" ],
        [ "-cpu", "host" ],
        [ "-smp", "cpus=1"]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "install.sh",
      "destination": "/tmp/install.sh"
    },
    {
    "type": "shell",
    "inline": [
      "sudo apt-get update -q",
      "sudo apt-get upgrade -yq",
      "sudo /tmp/install.sh",
      "sudo mkdir /home/vagrant/.ssh",
      "sudo bash -c 'echo {{ user `vagrant_key` }} > /home/vagrant/.ssh/authorized_keys'",
      "sudo chown -R vagrant:vagrant /home/vagrant/.ssh",
      "sudo chmod 600 /home/vagrant/.ssh/authorized_keys",
      "sudo chmod 700 /home/vagrant/.ssh",
      "sudo chmod -x /etc/update-motd.d/*"
    ]
  }],
 "variables": {
    "locale": "en_US",
    "preseed" : "preseed.cfg",
    "hostname": "vagrant",
    "ssh_fullname": "vagrant",
    "ssh_password": "vagrant",
    "ssh_username": "vagrant",
    "output_directory": "build",
    "vm_name": "ubuntu1804",
    "vagrant_key": "ssh-rsa  vagrant insecure public key"
  }
}
